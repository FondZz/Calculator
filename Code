num1 = int(num1)
num2 = input("Enter another number to add")
num2 =int(num2)


result = num1 + num2

print(f'your total is {result}')


devp = num1 / num2


print(f'your total would be {devp} if you divided.')


multiply = num1 * num2


print(f'your total would be {multiply} if you multiplied.')


minus = num1 - num2


print(f'your total would be {minus} if you took away.')

asd = num1 ** num2

print(f'your total is would be {asd} if you used Exponentiation.')

